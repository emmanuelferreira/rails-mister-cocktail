<div class="banner-cocktail" style="background-image: url(<%= @cocktail.img_url %>); ">
  <div class="container-cocktail-detail">
    <h1><strong><%= @cocktail.name.capitalize %> </strong></h1>
    <p>Let's make it awesome</p>
  </div>
</div>

<div class="card-doses">
  <img src="https://images.unsplash.com/photo-1553678324-f84674bd7b24?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=668&q=80" />
  <div class="card-doses-details">
    <h2>Preparation details</h2>
    <ul>
      <%@cocktail.doses.each do |dose| %>
        <li> <%= dose.description %> - <%= dose.ingredient.name %>  <%= link_to "-", dose_path(dose), method: :delete, data: { confirm: "sure?"} %></li>
      <% end %>
    </ul>
    <%= link_to 'Add new Dose', new_cocktail_dose_path(@cocktail) %>
  </div>
</div>


