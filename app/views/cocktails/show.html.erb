<%= link_to "Back to cocktail list", cocktails_path %>

<div class="card-cocktail">

  <img src="<%=@cocktail.img_url %>"/>
  <div class="card-cocktail-infos">
    <div>
      <h2><%= @cocktail.name %></h2>
      <ul>
        <%@cocktail.doses.each do |dose| %>
        <li> <%= dose.description %> - <%= dose.ingredient.name %> <%= link_to "+", dose_path(dose), method: :delete, data: { confirm: "sure?"} %></li>
        <% end %>
      </ul>
    </div>
<%= link_to 'Add a dose', new_cocktail_dose_path(@cocktail) %>

  </div>
</div>
